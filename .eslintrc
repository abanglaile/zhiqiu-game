{
  "extends": "standard",
  "plugins": [
    "html"
  ],
  "rules": {
    // allow paren-less arrow functions
    'arrow-parens': 0,
    // allow async-await
    'generator-star-spacing': 0,
    // allow debugger during development
    'no-debugger': 1,
    // allow unused vars
    'no-unused-vars': 0
  },
  "parser": "babel-eslint",
  "parserOptions": {},
  "env": {
    "browser": true
  },
  "globals": {}
}
